//清除条件
$(".option-show span").live("click",function(){
	$(this).addClass("none");
	var ttr = $(this).find("i").text();

	if (ttr == "校区：") {
		$("dt.school").removeClass("none");
	};
	if (ttr == "等级：") {
		$("dt.grade").removeClass("none");
	};
	if (ttr == "类型：") {
		$("dt.type").removeClass("none");
	};
});
