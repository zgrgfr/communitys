// 选择条件
$(".school a").click(function(e){
	var num0 = $(this).text();
	$(".option-show").append("<span><i>校区：</i>"+ num0 +"<em></em></span>");
	$(".school").addClass("none");
	$.ajax({
		type:"get",
		url:"/communitys/CommunityShowController?method=test",
		dataType:"", 
		data:"school="+num0,
		success: function(data){
			alert("提交数据");
		}
	});
});

